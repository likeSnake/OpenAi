<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_radius_30"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:text="有新版本！" />
    </LinearLayout>



    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#aa000000" />


    <TextView
        android:id="@+id/versionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:text="@string/version_info"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/updateLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/update"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_midnightblue_radius_30"
            android:text="更新"
            />


    </LinearLayout>

<LinearLayout
    android:id="@+id/update_percent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:visibility="gone"
    >

    <TextView
        android:id="@+id/upDownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upDown"/>
    <ProgressBar
        android:id="@+id/id_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

</LinearLayout>
    <LinearLayout
        android:id="@+id/installApkLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/installApk"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_midnightblue_radius_30"
            android:text="安装"
            />
    </LinearLayout>


</LinearLayout>